          </div><!-- .left-col -->

          <div class="right-col">
            <figure>
              <picture>
                <source type="image/webp" srcset="../images/transpile-classic.webp">
                <img src="../images/transpile-classic.jpg" alt="Rough-cut french fries" width="600" height="374">
              </picture>
              <figcaption>Classic<br><cite><a href="https://unsplash.com/photos/R9eP-0I96qo" rel="noopener" target="_blank">Sahand Babali</a></cite></figcaption>
            </figure>
          </div><!-- .right-col -->
        </div><!-- .two-col-container -->
        <figcaption>Same same but different</figcaption>
      </figure>

      <div class="two-col-container">

        <div class="left-col">
          <h3>Input</h3>
          <p>modern JS</p>
          <pre><code>
            const random = (array) => {
              const i = Math.floor(Math.random() * array.length);
              return array[i];
            };

            const counterparts = ['potato', 'JavaScript'];

            console.log(`At the end of the day it's all just ${random(counterparts)}`);
          </code></pre>
        </div><!-- .left-col -->

        <div class="right-col">
          <h3>Output</h3>
          <p>cross-browser-compatible JS</p>
          <pre><code>
            "use strict";

            var random = function random(array) {
              var i = Math.floor(Math.random() * array.length);
              return array[i];
            };

            var counterparts = ['potato', 'JavaScript'];
            console.log("At the end of the day it's all just ".concat(random(counterparts)));
          </code></pre>
        </div><!-- .right-col -->
      </div><!-- .two-col-container -->
