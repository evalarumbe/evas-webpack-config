    <section id="transpiling">
      <h2>transpiling</h2>

      <figure>
        <div class="two-col-container">

          <div class="left-col">
            <figure>
              <picture>
                <source type="image/webp" srcset="../images/transpile-modern.webp">
                <img src="../images/transpile-modern.jpg" alt="Crinkle-cut french fries" width="600" height="374">
              </picture>
              <figcaption>Modern<br><cite><a href="https://unsplash.com/photos/eeZvhg3FAEM" rel="noopener" target="_blank">bckfwd</a></cite></figcaption>
